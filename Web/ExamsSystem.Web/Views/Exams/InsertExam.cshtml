@model ExamsSystem.Web.ViewModels.Exams.ExamCreateViewModel

@{
    this.ViewData["Title"] = "Exams";
}

<h1>@this.ViewData["Title"]</h1>

<section>
    <h2>Create New Exam</h2>
    <form asp-controller="Exams" method="post">
        <p>
            <label for="Name">Name</label>
            <input type="text" asp-for="Exam.Name">
        </p>
        <p>
            <label for="Desctiption">Desctiption</label>
            <input type="text" asp-for="Description">
        </p>
        <p>
            <label for="Desctiption">Timer</label>
            <input type="time" asp-for="ExamTimer"
                   min="09:00" max="18:00" required>
        </p>
        <p>
            <label for="Question">Question</label>
            <input id="currentQuestion" type="text" asp-for="CurrentQuestion.Question" />
            @foreach (var item in Model.CurrentQuestion.Answers)
            {
                <div>@item.Answer</div>
            }
            <input id="currentAnswer" type="text" asp-for="CurrentAnswer.Answer" />
        </p>
        @foreach (var question in Model.AllQuestions)
        {
            <div>Question: @question.Question</div>
        }
        <p id="Answers">

        </p>
        <input type="submit" class="btn btn-primary" value="CreateAnswer" asp-action="CreateAnswer" />
        <input type="submit" class="btn btn-primary" value="Create" asp-action="Create" />
    </form>
</section>
</script>
